<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/darkerColor"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:padding="15dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="330dp"
        android:background="@drawable/ravne_ivice"
        android:elevation="4dp"
        android:padding="20dp"
        android:layout_marginBottom="19dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/btnGrupa"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">



            <Button
                android:id="@+id/choice131"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/score"
                android:layout_marginTop="2dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#1CB3BC"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:onClick="onClick"
                android:text="Button" />

            <Button
                android:id="@+id/choice241"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/choice1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/choice1"
                android:layout_below="@+id/choice1"
                android:layout_marginTop="11dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#1CB3BC"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:onClick="onClick"
                android:text="Button" />

            <Button
                android:id="@+id/choice351"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/choice2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/choice2"
                android:layout_below="@+id/choice2"
                android:layout_marginTop="8dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#1CB3BC"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:onClick="onClick"
                android:text="Button" />

            <Button
                android:id="@+id/choice461"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/choice3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/choice3"
                android:layout_below="@+id/choice3"
                android:layout_marginTop="11dp"
                android:background="#1CB3BC"
                android:onClick="onClick"
                android:text="Button"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/score700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="   Broj bodova"
            android:background="#f2a935"
            android:layout_above="@+id/btnGrupa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/score7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:fontFamily="Times New Roman"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broj tacnih odgovora"
            android:background="#f2a935"
            android:id="@+id/textView3"
            android:layout_above="@+id/btnGrupa"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>




</RelativeLayout>