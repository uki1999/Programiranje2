<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/darkerColor"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="TextView"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:background="@drawable/ravne_ivice"
        android:elevation="4dp"
        android:padding="20dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/score100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_above="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />

        <LinearLayout
            android:id="@+id/btnGrupa"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/score100"
            android:layout_alignStart="@+id/score100">



            <Button
                android:id="@+id/choice1"
                android:layout_width="181dp"
                android:layout_height="29dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/score"
                android:layout_marginTop="2dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#1CB3BC"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:onClick="onClick"
                android:text="Button" />

            <Button
                android:id="@+id/choice2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="182dp"
                android:layout_height="28dp"
                android:layout_alignLeft="@+id/choice1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/choice1"
                android:layout_below="@+id/choice1"
                android:layout_marginTop="11dp"
                android:background="#1CB3BC"
                android:onClick="onClick"
                android:text="Button"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Button
                android:id="@+id/choice3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="183dp"
                android:layout_height="29dp"
                android:layout_alignLeft="@+id/choice2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/choice2"
                android:layout_below="@+id/choice2"
                android:layout_marginTop="8dp"
                android:background="#1CB3BC"
                android:onClick="onClick"
                android:text="Button"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Button
                android:id="@+id/choice4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="186dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/choice3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/choice3"
                android:layout_below="@+id/choice3"
                android:layout_marginTop="11dp"
                android:background="#1CB3BC"
                android:onClick="onClick"
                android:text="Button"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="   Broj bodova"
            android:background="#f2a935"
            android:layout_above="@+id/btnGrupa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broj tacnih odgovora"
            android:background="#f2a935"
            android:id="@+id/textView3"
            android:layout_above="@+id/btnGrupa"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Times New Roman"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp"
            android:layout_above="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>




</RelativeLayout>