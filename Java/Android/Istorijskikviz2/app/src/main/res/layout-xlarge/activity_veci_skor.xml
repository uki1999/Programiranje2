<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkerColor"
    tools:context="com.kurs.iserbia.istorijskikviz.com.kurs.iserbia.geoistorijskiviz.VeciSkorActivity">

    <RelativeLayout
        android:layout_marginTop="282dp"
        android:padding="20dp"
        android:elevation="4dp"
        android:background="@drawable/ravne_ivice"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/btnGrupa"
        android:padding="10dp"
        android:layout_width="500dp"
        android:layout_height="450dp">

        <TextView
            android:id="@+id/textScore"
            android:textColor="@color/darkerColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vas skor:"
            android:padding="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/textHighScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vas najbolji rezultat:"
            android:textColor="@color/darkerColor"
            android:padding="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkerColor"
            android:onClick="onClick"
            android:text="Pokusaj ponovo"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:paddingTop="1dp"
            android:text="Vrati se na izbor kviza"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>